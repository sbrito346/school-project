<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:id="loginPane" xmlns:fx="http://javafx.com/fxml" fx:controller="home.LogInController" hgap="20" vgap="20">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Text fx:id="zoneLabel" />
    </HBox>

    <Label fx:id="userNameLabel" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="userNameInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="passwordLabel" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="signInButton" onAction="#onSignIn" />
    </HBox>

</GridPane>
